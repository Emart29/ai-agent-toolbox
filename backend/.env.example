# Application Settings
APP_NAME=AI Agent Toolbox
APP_VERSION=1.0.0
DEBUG=False

# Server Settings
PORT=8000
HOST=0.0.0.0
WORKERS=4

# CORS Settings (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com

# Groq API (LLM) - REQUIRED
# Get your key at: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# Tavily API (Primary Web Search) - REQUIRED
# Get your key at: https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here

# SerpAPI (Fallback Web Search) - OPTIONAL
# Get your key at: https://serpapi.com/
SERPAPI_API_KEY=your_serpapi_key_here

# OpenWeatherMap API - OPTIONAL
# Get your key at: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Fixer.io API (Currency Conversion) - OPTIONAL
# Get your key at: https://fixer.io/
FIXER_API_KEY=your_fixer_api_key_here

# Database
DATABASE_URL=sqlite:///./agent_data.db

# Agent Settings
MAX_ITERATIONS=10
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=2000
